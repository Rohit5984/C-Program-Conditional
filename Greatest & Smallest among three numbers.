#include <cstdio>   // For printf, scanf

// Function declaration
void findGreatestSmallest(int a, int b, int c);

int main() {
    int num1, num2, num3;

    printf("Enter three numbers: ");
    scanf("%d %d %d", &num1, &num2, &num3);

    // Function call
    findGreatestSmallest(num1, num2, num3);

    return 0;
}

// Function definition
void findGreatestSmallest(int a, int b, int c) {
    // Find greatest
    if (a >= b && a >= c) 
	{
        printf("Greatest number: %d\n", a);
    } else if (b >= a && b >= c) {
        printf("Greatest number: %d\n", b);
    } else {
        printf("Greatest number: %d\n", c);
    }

    // Find smallest
    if (a <= b && a <= c) {
        printf("Smallest number: %d\n", a);
    } else if (b <= a && b <= c) {
        printf("Smallest number: %d\n", b);
    } else {
        printf("Smallest number: %d\n", c);
    }
}
