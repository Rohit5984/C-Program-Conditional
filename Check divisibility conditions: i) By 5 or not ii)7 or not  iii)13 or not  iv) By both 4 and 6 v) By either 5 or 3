//WAP to check whether a no. is divisible i)By 5 or not ii)By 7 or not  iii)By 13 or not  iv) By both 4 and 6 v) By either 5 or 3
#include <stdio.h>

// Function declaration
void checkDivisibility(int n);

int main() {
    int n;
    printf("Enter any number: ");
    scanf("%d", &n);

    // Function call
    checkDivisibility(n);

    return 0;
}

// Function definition
void checkDivisibility(int n) {
    // i) By 5 or not
    if (n % 5 == 0) {
        printf("%d is divisible by 5\n", n);
    } else {
        printf("%d is NOT divisible by 5\n", n);
    }

    // ii) By 7 or not
    if (n % 7 == 0) {
        printf("%d is divisible by 7\n", n);
    } else {
        printf("%d is NOT divisible by 7\n", n);
    }

    // iii) By 13 or not
    if (n % 13 == 0) {
        printf("%d is divisible by 13\n", n);
    } else {
        printf("%d is NOT divisible by 13\n", n);
    }

    // iv) By both 4 and 6
    if (n % 4 == 0 && n % 6 == 0) {
        printf("%d is divisible by BOTH 4 and 6\n", n);
    } else {
        printf("%d is NOT divisible by BOTH 4 and 6\n", n);
    }

    // v) By either 5 or 3
    if (n % 5 == 0 || n % 3 == 0) {
        printf("%d is divisible by EITHER 5 or 3\n", n);
    } else {
        printf("%d is NOT divisible by EITHER 5 or 3\n", n);
    }
}

