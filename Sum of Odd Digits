#include <stdio.h>

void sumOfOddDigits(int num);

int main() {
    int num;
    printf("Enter a number: ");
    scanf("%d", &num);

    sumOfOddDigits(num);
    return 0;
}

void sumOfOddDigits(int num) {
    int sum = 0, rem;
    while (num != 0) {
        rem = num % 10;
        if (rem % 2 != 0) sum += rem;
        num /= 10;
    }
    printf("Sum of odd digits = %d\n", sum);
}
