#include <stdio.h>
#include <string.h>

void countVowels(char str[]);

int main() {
    char str[100];
    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);

    countVowels(str);
    return 0;
}

void countVowels(char str[]) {
    int count = 0;
    for (int i = 0; str[i] != '\0'; i++) {
        char ch = str[i];
        if (ch=='a'||ch=='e'||ch=='i'||ch=='o'||ch=='u'||
            ch=='A'||ch=='E'||ch=='I'||ch=='O'||ch=='U') {
            count++;
        }
    }
    printf("Total vowels = %d\n", count);
}

/* Example Output =>
   Enter a string: Hello World
   Total vowels = 3
*/
