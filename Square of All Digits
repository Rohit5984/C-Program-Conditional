#include <stdio.h>

void squareOfDigits(int num);

int main() {
    int num;
    printf("Enter a number: ");
    scanf("%d", &num);

    squareOfDigits(num);
    return 0;
}

void squareOfDigits(int num) {
    int rem;
    printf("Squares of digits: ");
    while (num != 0) {
        rem = num % 10;
        printf("%d ", rem * rem);
        num /= 10;
    }
    printf("\n");
}
