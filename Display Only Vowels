#include <stdio.h>
#include <string.h>

void displayVowels(char str[]);

int main() {
    char str[100];
    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);

    displayVowels(str);
    return 0;
}

void displayVowels(char str[]) {
    printf("Vowels in the string: ");
    for (int i = 0; str[i] != '\0'; i++) {
        char ch = str[i];
        if (ch=='a'||ch=='e'||ch=='i'||ch=='o'||ch=='u'||
            ch=='A'||ch=='E'||ch=='I'||ch=='O'||ch=='U') {
            printf("%c ", ch);
        }
    }
    printf("\n");
}

/* Example Output =>
   Enter a string: Hello World
   Vowels in the string: e o o
*/
