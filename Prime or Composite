#include <stdio.h>

// Function declaration
void checkPrime(int n);

int main() {
    int a;
    printf("Enter a number: ");
    scanf("%d", &a);

    // Function call
    checkPrime(a);

    return 0;
}

void checkPrime(int n) 
{
    int i, c = 0;

    // Count divisors
    for (i = 1; i <= n; i++) {
        if (n % i == 0) {
            c++;
        }
    }

    // Special case for 1
    if (n == 1) {
        printf("Neither prime nor composite\n");
    }
    else if (c == 2) {
        printf("Prime\n");
    }
    else {
        printf("Composite\n");
    }
}
