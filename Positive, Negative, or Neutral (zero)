#include <cstdio>   // Always write this 
#include <cstring>   // Always write this

// Function declaration
void checkNumber(int n);
int main() 
{
    int n;
    printf("Enter any number: ");
    scanf("%d", &n);

    // Function call
    checkNumber(n);

    return 0;
}

// Function definition
void checkNumber(int n) 
{
    if (n > 0) {
        printf("Positive number: %d\n", n);
    } else if (n < 0) {
        printf("Negative number");
    } else {
        printf("Neutral number: %d\n", n);
    }
}
