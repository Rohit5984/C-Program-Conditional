#include <cstdio>   

void findGreatestSmallest(int a, int b);

int main() {
    int a, b;     

    printf("Enter two numbers: ");
    scanf("%d %d", &a ,&b);   // Removed trailing space

    // Function call
    findGreatestSmallest(a, b);

    return 0;
}

// Function definition
void findGreatestSmallest(int a, int b) {
    // Find greatest
    if (a >= b) {
        printf("Greatest number: %d\n", a);
    } else {
        printf("Greatest number: %d\n", b);
    }

    // Find smallest
    if (a <= b) {
        printf("Smallest number: %d\n", a);
    } else {
        printf("Smallest number: %d\n", b);
    }
}
