#include <stdio.h>
#include <string.h>

// Function declaration
void sortString(char str[]);

int main() {
    char str[100];    // can hold "Nepal" or even a long sentence up to 99 characters

    printf("Enter a string: ");
    scanf("%s", str);

    sortString(str);   // Function call
    return 0;
}

// Function definition
void sortString(char str[]) 
{
    int i, j, len;
    char temp;
    len = strlen(str);

    for (i = 0; i < len; i++) {
        for (j = i + 1; j < len; j++) {
            if (str[i] > str[j]) {
                temp = str[i];
                str[i] = str[j];
                str[j] = temp;
            }
        }
    }

    printf("Sorted string = %s\n", str);
}
