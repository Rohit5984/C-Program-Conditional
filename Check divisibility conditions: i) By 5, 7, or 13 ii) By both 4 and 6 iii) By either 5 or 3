//WAP to check whether a no. is divisible i)By 5, 7, or 13  ii)By both 4 and 6 iii)By either 5 or 3
#include <stdio.h>

// Function declaration
void checkDivisibility(int n);

int main() {
    int num;
    printf("Enter a number: ");
    scanf("%d", &num);

    // Function call
    checkDivisibility(num);

    return 0;
}

// Function definition
void checkDivisibility(int n) {
    // i) Divisible by 5, 7, or 13
    if (n % 5 == 0 || n % 7 == 0 || n % 13 == 0)       // || means or
	{
        printf("Divisible by 5 or 7 or 13\n");
    } else {
        printf("Not divisible by 5, 7, or 13\n");
    }

    // ii) Divisible by both 4 and 6
    if (n % 4 == 0 && n % 6 == 0) {
        printf("Divisible by both 4 and 6\n");
    } else {
        printf("Not divisible by both 4 and 6\n");
    }

    // iii) Divisible by either 5 or 3
    if (n % 5 == 0 || n % 3 == 0) {
        printf("Divisible by either 5 or 3\n");
    } else {
        printf("Not divisible by either 5 or 3\n");
    }
}
