#include <stdio.h>

// Function declaration
void sumOfDigits(int num);

int main() {
    int num;
    printf("Enter a number: ");
    scanf("%d", &num);

    sumOfDigits(num);   // Function call
    return 0;
}

// Function definition
void sumOfDigits(int num) {
    int sum = 0, rem;
    while (num != 0) {
        rem = num % 10;
        sum = sum + rem;
        num /= 10;
    }
    printf("Sum of digits = %d\n", sum);
}
