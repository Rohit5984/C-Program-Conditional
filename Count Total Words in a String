#include <stdio.h>
#include <string.h>
#include <ctype.h>

void countWords(char str[]);

int main() {
    char str[200];
    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);

    countWords(str);
    return 0;
}

void countWords(char str[]) {
    int count = 0;
    char *token = strtok(str, " \t\n");
    while (token != NULL) {
        count++;
        token = strtok(NULL, " \t\n");
    }
    printf("Total words = %d\n", count);
}

/* Example Output =>
   Enter a string: Hello world from Nepal
   Total words = 4
*/
